<div class="top-row pl-4 navbar navbar-dark">
    <a class="navbar-brand" href="">Project.Track</a>
    <button class="navbar-toggler" @onclick="ToggleNavMenu">
        <span class="navbar-toggler-icon"></span>
    </button>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <ul class="nav flex-column">
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="@_versionString" >
                <span class="oi oi-home" aria-hidden="true"></span> Versions
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="@_featuresString">
                <span class="oi oi-plus" aria-hidden="true"></span> Features
            </NavLink>
        </li>
    </ul>
</div>

@code {
    [Parameter]
    public string SolutionId { get; set; }
    
    private bool _collapseNavMenu = true;
    private string NavMenuCssClass => _collapseNavMenu ? "collapse" : null;

    private string _versionString;
    private string _featuresString;

    protected override void OnInitialized()
    {
        _versionString = $"/solutions/{SolutionId}/versions/";
        _featuresString = $"/solutions/{SolutionId}/versions/";
        StateHasChanged();
    }

    private void ToggleNavMenu()
    {
        _collapseNavMenu = !_collapseNavMenu;
    }
}